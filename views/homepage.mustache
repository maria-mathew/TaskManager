<!DOCTYPE html>
<html>
<head>
  <title>Task Manager Application</title>
  <style>
    td, th, table { border: 1px solid black; }
    td, th { padding: 5px; }
    table { border-collapse: collapse; }

    .task-column {
      display: inline-block;
      width: 30%;
      padding: 10px;
      vertical-align: top;
      box-sizing: border-box;
    }

    .task-tile { 
      border: 1px solid #ddd; 
      padding: 10px; 
      margin-bottom: 10px; 
      background-color: #f9f9f9; 
    }

    .task-title { font-weight: bold; }
    .task-actions a { margin-right: 10px; }

    @media (max-width: 768px) {
      .task-column {
        width: 100%;
        display: block;
      }
      .task-column h3 {
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <h1>Task Manager Application</h1>

  <h2>Task records</h2>

  <div class="task-column">
    <h3>To-do</h3>
    {{#tasks.todo}}
      <div class="task-tile">
        <div class="task-title">{{title}}</div>
        <div>{{description}}</div>
        <div>Due Date: {{dueDate}}</div>
        <div>Subject: {{subject}}</div>
        <div>Status: {{status}}</div>
        <div class="task-actions">
          <a href="/deletetask/{{rowid}}">Delete</a>
          <a href="/updateform/{{rowid}}">Update</a>
        </div>
      </div>
    {{/tasks.todo}}
  </div>

  <div class="task-column">
    <h3>In Progress</h3>
    {{#tasks.inProgress}}
      <div class="task-tile">
        <div class="task-title">{{title}}</div>
        <div>{{description}}</div>
        <div>Due Date: {{dueDate}}</div>
        <div>Subject: {{subject}}</div>
        <div>Status: {{status}}</div>
        <div class="task-actions">
          <a href="/deletetask/{{rowid}}">Delete</a>
          <a href="/updateform/{{rowid}}">Update</a>
        </div>
      </div>
    {{/tasks.inProgress}}
  </div>

  <div class="task-column">
    <h3>Completed</h3>
    {{#tasks.completed}}
      <div class="task-tile">
        <div class="task-title">{{title}}</div>
        <div>{{description}}</div>
        <div>Due Date: {{dueDate}}</div>
        <div>Subject: {{subject}}</div>
        <div>Status: {{status}}</div>
        <div class="task-actions">
          <a href="/deletetask/{{rowid}}">Delete</a>
          <a href="/updateform/{{rowid}}">Update</a>
        </div>
      </div>
    {{/tasks.completed}}
  </div>


  <p><a href="/addform">Add Task</a></p>
  <p><a href="/deletealltasks">Delete all tasks</a></p>

  {{#addtask}}
    <form action="/addtask" method="POST">
      <label for="title">Title</label>
      <input type="text" name="title"> <br /> 
      <label for="description">Description</label>
      <input type="text" name="description"> <br /> 
      <label for="dueDate">Due Date</label>
      <input type="text" name="dueDate"> <br /> 
      <label for="subject">Subject</label>
      <input type="text" name="subject"> <br />
      <input type="submit" />
    </form>
  {{/addtask}}

  {{#updatetask}}
    <form action="/updatetask/{{updateid}}" method="POST">
      <label for="title">Title</label>
      <input type="text" name="title" value="{{formdata.title}}"> <br /> 
      <label for="description">Description</label>
      <input type="text" name="description" value="{{formdata.description}}"> <br /> 
      <label for="dueDate">Due Date</label>
      <input type="text" name="dueDate" value="{{formdata.dueDate}}"> <br /> 
      <label for="subject">Subject</label>
      <input type="text" name="subject" value="{{formdata.subject}}"> <br />
      <label for="status">Status</label>
      <input type="text" name="status" value="{{formdata.status}}"> <br /> 
      <input type="submit" />
    </form>
  {{/updatetask}}

</body>
</html>
